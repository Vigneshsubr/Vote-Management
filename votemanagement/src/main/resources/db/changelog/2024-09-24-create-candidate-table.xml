<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2024-09-24-create-candidate-table" author="Vignesh">
        <!-- Create candidate table -->
        <createTable tableName="candidate">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="election_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="party" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="updated_at" type="timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <!-- Add foreign key constraint to election table -->
        <addForeignKeyConstraint baseColumnNames="election_id"
                                 baseTableName="candidate"
                                 constraintName="fk_candidate_election"
                                 referencedColumnNames="id"
                                 referencedTableName="election" />

        <!-- Add foreign key constraint to user table -->
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="candidate"
                                 constraintName="fk_candidate_user"
                                 referencedColumnNames="id"
                                 referencedTableName="users" />

    </changeSet>

</databaseChangeLog>
